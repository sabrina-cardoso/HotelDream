<!DOCTYPE html>
<html>
<head>
    <style>
        #nav {
            display: flex;
            justify-content: center;
            background-color: midnightblue;
        }

        .li {
            font-size: medium;
            padding-right: 70px;
        }

        #imageLogin {
            float: right;
            padding-right: 10px;
            width: 45px;
            height: 30px;
        }

        #imageLogo {
            width: 400px;
            height: 75px;
            
        }

        #spanEntrar {
            font-size: 16px;
            float: right;
            padding-top:5px;
        }
        #spanEntrar:hover {
            cursor: pointer;
            font-size: 16px;         
        }

    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="col-lg-12" style="background-color: midnightblue; padding-bottom:15px">
            
        </div>
        <div class="navbar-header col-lg-12" style="padding:20px; background-color:white">
            <span id="spanEntrar" class="center-block"><u>@Html.ActionLink("Entrar ou Cadastre-se", "Login", "Hospede")</u></span>
            <img id="imageLogin" src="~/Images/login.png">
            <div class="col-lg-12"><img class="center-block" id="imageLogo" src="~/Images/logo-hotel.jpg" alt="Hotel Dream"></div>
        </div>
        <div>
            <div class=" collapse col-lg-12 " id="nav">
                <ul class="nav navbar-nav">
                    <li class="li">@Html.ActionLink("Inicio", "Index", "Inicio" )</li>
                    <li class="li">@Html.ActionLink("Sobre a Dream", "Index", "Sobre")</li>
                    <li style="font-size: medium;">@Html.ActionLink("Reservar", "Index", "Reservar")</li>
                </ul>
            </div>
        </div>
    </div>
    <div style="padding-top:150px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hotel Dream</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
